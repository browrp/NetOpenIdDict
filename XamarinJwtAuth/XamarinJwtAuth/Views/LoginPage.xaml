<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             x:Class="XamarinJwtAuth.Views.LoginPage"
             Shell.NavBarIsVisible="False">
    <ContentPage.Content>
        <StackLayout Padding="10,0,10,0" VerticalOptions="Center">
            <Button VerticalOptions="Center" Text="Login / Roll Back to About" Command="{Binding LoginCommand}"/>
            <Entry Placeholder="Email Address" PlaceholderColor="Olive"
                   TextColor="Purple" Text="{Binding Username, Mode=TwoWay}" />
            <Entry Placeholder="Password" IsPassword="True" PlaceholderColor="Olive" 
                   TextColor= "Purple" Text="{Binding  Password, Mode=TwoWay}" />

            <Button VerticalOptions="Center" Text="Request JWT"
                    Command="{Binding LoginWithJwtCommand}" />
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>